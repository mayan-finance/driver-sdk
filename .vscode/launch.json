{
    "version": "1.0.0",
    "configurations": [
      {
        "name": "TS-Node",
        "type": "node",
        "request": "launch",
        "runtimeExecutable": "ts-node",
        "runtimeArgs": [
            "."
        ],
        "outputCapture": "std",
        "cwd": "${workspaceRoot}",
        "internalConsoleOptions": "openOnSessionStart",
        "skipFiles": ["<node_internals>/**", "node_modules/**"]
      }
    ]
  }